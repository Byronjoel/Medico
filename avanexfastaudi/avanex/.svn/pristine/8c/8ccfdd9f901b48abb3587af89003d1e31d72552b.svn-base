<?xml version="1.0" encoding="UTF-8"?>
<?page title="Informe A" id="m_informes" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" root="./usuario_label"?>

<!-- @author Juan Pablo Chavez   -->
<!-- @version 1.0.1  -->
